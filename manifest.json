{
  "manifest_version": 3,
  "name": "BOQ Auto Fill (Protected - Full)",
  "version": "1.1",
  "description": "Auto YES & -5 for e-GP (requires email verification)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.eprocure.gov.bd/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "48": "icon48.png"
  }
}